require 'thor'

require './oynx_back'

class Oynx < Thor
	desc "new", "create a new website"
	long_desc <<-LONGDESC
		`oynx new` will create a new website in the current directory.

		Optional Parameters
		-------------------

		--name "NAME" - Specify the site's name.
	LONGDESC
	option :name
	option :default, :type => :boolean
	def new
		if options[:default] then
			o = Oynx_Back.new
			o.create_site()
		else
			puts "Your site is named #{options[:name]}" if options[:name]
			puts "Hello, world!"

			if options[:name] then
				c = {"name" => options[:name]}
				o = Oynx_Back.new(c)
				o.create_site()
			end
		end
	end
end

Oynx.start(ARGV)